!!! Strict
%html{ html_attrs("en_us") }
  %head
    %meta(content="text/html; charset=utf-8" http-equiv="content-type")/
    %meta(name="robots" content="follow, all")/
  
    %title= AppConfig.site_title
    = stylesheets_from_config
    = include_required_css
    = css_include_tag AppConfig.site_css

    = javascripts_from_config
    = include_required_js

  %body{:class => body_style, :id => body_id}
    = partial "layout/top_nav"
    #headerwrap
      #header
        #logo
          = nbsp
        #dropmenu
          = partial "dropmenu/all"
        #header_content
        
        = clear
    
    = catch_content :for_layout
    = partial "layout/footer"

